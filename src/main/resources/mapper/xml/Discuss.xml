<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
 <mapper namespace="com.tarena.entity.DiscussMapper">
 	<!-- 查询所有评论数-->
 	<select id="countDiscussNum" resultType="java.lang.Integer">
 		select count(id) from discuss
 	</select>
 	
 	<!-- 查询所有新闻-->
 	<select id="findAllDiscuss" resultType="com.tarena.entity.Discuss">
 		select * from discuss
 	</select>
 	
 	<!-- 根据关键字模糊查找评论信息 -->
 	<select id="mfindDiscuss"   parameterType="java.lang.String" resultType="com.tarena.entity.Discuss">
 		select * from discuss where  id like binary "%"#{keywords}"%" 
 		or type like binary "%"#{keywords}"%"
 		or pid like binary "%"#{keywords}"%"
 		or uid like binary "%"#{keywords}"%"
 		or present like binary "%"#{keywords}"%"
 	</select>
 	
 	<!-- 查询所有新闻-->
 	<delete id="deleteDiscussById" parameterType="java.lang.Integer">
 		 delete from  discuss where id=#{id}
 	</delete>
 	
 	<!-- 插入新评论-->
 	<insert id="insertDiscuss" parameterType="com.tarena.entity.Discuss">
 		 insert into discuss (type,pid,uid,ptime,present) values(#{type},#{pid},#{uid},#{ptime},#{present})
 	</insert>
 	
 	<!-- 根据景点信息号查找评论-->
 	<select id="findDiscussByVid"  parameterType="java.lang.Integer"  resultType="com.tarena.entity.Discuss">
 		select * from discuss where pid=#{vid} and type=2
 	</select>
 	
 	<!-- 根据新闻信息号查找评论-->
 	<select id="findDiscussByNid"  parameterType="java.lang.Integer"  resultType="com.tarena.entity.Discuss">
 		select * from discuss where pid=#{nid}	and type=1
 	</select>
 	
 	<!-- 根据问答信息号查找评论-->
 	<select id="findDiscussByQid"  parameterType="java.lang.Integer"  resultType="com.tarena.entity.Discuss">
 		select * from discuss where pid=#{qid}	and type=4
 	</select>
 	
 	<!-- 根据游记号查找评论-->
 	<select id="findDiscussByTid"  parameterType="java.lang.Integer"  resultType="com.tarena.entity.Discuss">
 		select * from discuss where pid=#{tid}	and type=3
 	</select>
 </mapper>